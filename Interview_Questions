# reverse a string
def reverse(string):
    rev_str=""
    for i in string:
        rev_str=i+rev_str  #concatenating the elements to the rev_str
    print("Reversed string:",rev_str)
string = input("Enter a string:")
print("Entered string",string)
reverse(string)

